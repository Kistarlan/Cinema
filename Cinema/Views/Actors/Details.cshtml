@model Cinema.Models.Actor

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>
    </dl>
    <div>
        <p>Films where @Model.Name played:</p>
        <div>
            <ul>
                @foreach (var film in Model.Films)
                {
                    <li><a href="~/Films/Details/@film.Id">@film.Name</a></li>
                }
            </ul>
        </div>
    </div>
    <div class="form-group">
        <form action="~/Actors/Edit/@Model.Id" class="col-md-2">
            <button>Edit</button>
        </form>
        <form action="~/Actors/Delete/@Model.Id" class="col-md-10">
            <button>Delete</button>
        </form>
    </div>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
